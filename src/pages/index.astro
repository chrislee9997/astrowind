---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Chris Lee - 数字游民与内容创作者',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: '关于我',
        href: '/about',
      },
      { text: '查看文章', href: '/blog' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Chris Lee' }}
  >
    <Fragment slot="title">
      Chris Lee <span class="hidden xl:inline">-</span>
      <span class="text-accent dark:text-white">数字游民与内容创作者</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">1% Creator</span> 社区创始人，探索自由创作生活方式
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">数字游民 · 内容创作者</span>
      小红书 1.3万粉丝 | 分享个人成长、哲学思考与创作者经济
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="我的分享"
    title="在这里你能看到什么"
    subtitle="探索创作者经济、个人成长和数字游民生活"
    items={[
      {
        title: '创作者经济',
        description: '分享内容创作、社群运营和变现策略的实践经验',
        icon: 'tabler:currency-dollar',
      },
      {
        title: '个人成长',
        description: '从传统职场到自由创作的转型历程和思考',
        icon: 'tabler:plant',
      },
      {
        title: '哲学探索',
        description: '东方智慧、Spiral Dynamics 和人生意义的探讨',
        icon: 'tabler:bulb',
      },
      {
        title: '数字游民',
        description: '远程工作、环游世界和自由生活方式的实践',
        icon: 'tabler:world',
      },
      {
        title: '社区运营',
        description: '1% Creator 社区的建设和运营经验分享',
        icon: 'tabler:users-group',
      },
      {
        title: '工具与方法',
        description: '提升创作效率和质量的工具、框架和方法论',
        icon: 'tabler:tools',
      },
    ]}
  />

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="最新文章"
    information="分享关于创作者经济、个人成长和数字游民生活的思考与实践"
  />
</Layout>
