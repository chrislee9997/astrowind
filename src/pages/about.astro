---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: '关于我',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="关于 Chris Lee"
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Chris Lee',
    }}
  >
    <Fragment slot="title">
      数字游民 <br />
      <span class="text-accent dark:text-white highlight"> 内容创作者</span>
    </Fragment>

    <Fragment slot="subtitle">
      我是一名数字游民和内容创作者，通过写作、分享和社区运营，探索自由创作的生活方式。<br/>
      从传统职场到独立创作，我经历了从追求外在成就到寻找内在意义的转变。<br/>
      现在，我致力于帮助更多人找到自己的创作之路。
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="我的创作数据"
    stats={[
      { title: '小红书粉丝', amount: '13K' },
      { title: '旅居国家', amount: '6+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="我的经历"
    subtitle="从传统职场到自由创作的探索之路"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: '数字游民',
        description: '目前在尼泊尔博卡拉，探索自由的生活方式，实践远程工作与创作的结合。',
        icon: 'tabler:world',
      },
      {
        title: '内容创作者',
        description: '小红书 1.3万粉丝，专注分享个人成长与创作者经济。',
        icon: 'tabler:writing',
      },
      {
        title: '社区运营者',
        description: '1% Creator 社区创始人，共同探索创作者的成长之路。',
        icon: 'tabler:users-group',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: '哲学探索',
        description: '对东方哲学、Spiral Dynamics、Osho、Alan Watts 等思想体系有深入研究。',
        icon: 'tabler:bulb',
      },
      {
        title: '创作者经济',
        description: '研究 Dan Koe、Alex Hormozi 等人的方法论，开发了 CECI 创作框架。',
        icon: 'tabler:chart-line',
      },
      {
        title: '产品开发',
        description: '创作电子书、付费社区、训练营等产品，探索创作者的变现路径。',
        icon: 'tabler:package',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Creative work',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="我的创作理念"
    subtitle="1% Creator - 每天进步 1%，持续探索与成长"
    items={[
      {
        title: '真实表达',
        description: '分享真实的思考和经历，而不是追求完美的形象。',
      },
      {
        title: '持续学习',
        description: '保持好奇心，不断学习新的知识和技能。',
      },
      {
        title: '价值创造',
        description: '通过内容创作为他人提供价值，实现自我与他人的双赢。',
      },
      {
        title: '社区共建',
        description: '与志同道合的人一起，构建相互支持的创作者社区。',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="联系方式"
    tagline="让我们保持联系"
    columns={2}
    items={[
      {
        title: '小红书',
        description: '@克里斯李 - 1.3万粉丝，分享创作者经济和个人成长',
        icon: 'tabler:brand-reddit',
      },
      {
        title: '微信公众号',
        description: '克里斯的信 - 深度长文',
        icon: 'tabler:brand-wechat',
      },
      {
        title: 'Email',
        description: 'hello@chrislee.life - 欢迎合作与交流',
        icon: 'tabler:mail',
      },
      {
        title: '1% Creator 社区',
        description: '加入我们，一起探索创作者之路',
        icon: 'tabler:users',
      },
    ]}
  />
</Layout>
